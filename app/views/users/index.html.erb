<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>
<%= will_paginate @users, :class => 'pagination pagination-inverse' %>
<table style="border: 1px solid;">
  <thead>
    <tr>
      <th style="border: 1px solid;  padding: 5px;">Name</th>
      <th style="border: 1px solid;  padding: 5px;">Email</th>
      <th style="border: 1px solid;  padding: 5px;">Actions</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td style="border: 1px solid;  padding: 5px;"><%= link_to user.name, user %><%= gravatar_for user %></td>
        <td style="border: 1px solid;  padding: 5px;"><%= user.email %></td>

        <td style="padding: 2px;"><%= link_to 'Edit', edit_user_path(user), class: "btn btn-primary"  %></td>
        <% if current_user.admin? && !current_user?(user) %>
        <td style=" padding: 2px;"><%= link_to 'Destroy', user, class: "btn btn-danger", method: :delete, data: { confirm: 'Really???' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @users, :class => 'pagination pagination-inverse' %>
<br>

<%= link_to 'New User', new_user_path %>
