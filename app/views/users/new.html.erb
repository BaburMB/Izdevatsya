<h1>Are you newbie? Sign up!</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

        <%= render 'shared/error_messages' %>

 <!-- NAME -->

                <div class="form-group ">
                      <label for="user_name"><%= f.label :name %></label>
                      <input class="form-control" id="user_name" name="user[name]" placeholder="Name and Surname" type="text" >
                </div>


<!-- EMAIL -->
                <div class="form-group ">
                      <label for="user_email"><%= f.label :email %></label>
                      <input class="form-control" id="user_email" name="user[email]" placeholder="example@example.com" type="text">
                </div>

        <!-- PASSWORD -->

        <div class="form-group">
                    <label for="user_password"><%= f.label :password %></label>
                    <input class="form-control" id="user_password" name="user[password]" placeholder="Password" type="password">
        </div>


        <div class="form-group">
                    <label for="user_password_confirmation">Retype your password</label>
                    <input class="form-control" id="user_password_confirmation" name="user[password_confirmation]" placeholder="Repeat" type="password">
        </div>

        <%= f.submit "OK", class: "btn btn-embossed btn-primary" %>

    <% end %>
  </div>
</div>

<%= link_to '<- Back', users_path, class: "btn btn-embossed btn-primary"  %>
