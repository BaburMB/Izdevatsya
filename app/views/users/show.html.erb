
<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
      </h1>
      <br><br><br>
      <h1>
        Name:
        <%= @user.name %>
      </h1>
      <h1>
        Email:
        <%= @user.email %>
      </h1>
      <p>
        <strong>id:</strong>
        <%= @user.id %>
      </p>
    </section>
  </aside>
</div>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to '<- Back', users_path %>
